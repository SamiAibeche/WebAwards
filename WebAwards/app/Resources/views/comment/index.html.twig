{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">

        <div class="row">
            <div  class="col-xs-12 text-center text-uppercase divTitle">
                <h1> - Membres de <strong>WebAwards</strong> - </h1>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row blocProjectDay">
            <div class="blocUserList">
                {% for comment in comments %}
                    <div class="col-xs-6 col-md-4 col-lg-2 blocUserVignette">
                        <div style="text-align: center">
                            <a class="userNameTitle" href="{{ path('user_show', { 'id': comment.idUser.id }) }}"><h5>{{ comment.idUser.username }}</h5></a>
                            <p class="infoCommentShow">a post√© <a href="{{ path('comment_show', { 'id': comment.id }) }}">ce commentaire</a></p>
                            <p class="infoCommentShow">le : {{ comment.dateAdd|date("d/m/Y") }}</p>
                            <p class="linkEditComment"><a href="{{ path('comment_edit', { 'id': comment.id }) }}">MODIFIER</a></p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="blocBtn">
                <a class="btn btRetour" href="{{ app.request.headers.get('referer') }}">RETOUR</a>
            </div>
        </div>
    </div>
{% endblock %}
