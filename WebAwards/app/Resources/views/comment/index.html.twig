{% extends 'base.html.twig' %}

{% block body %}
    <h1>Comment list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Iduser</th>
                <th>Idproject</th>
                <th>Content</th>
                <th>Dateadd</th>
                <th>Nblike</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td><a href="{{ path('comment_show', { 'id': comment.id }) }}">{{ comment.id }}</a></td>
                <td>{{ comment.idUser }}</td>
                <td>{{ comment.idProject }}</td>
                <td>{{ comment.content }}</td>
                <td>{% if comment.dateAdd %}{{ comment.dateAdd|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ comment.nbLike }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('comment_show', { 'id': comment.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('comment_edit', { 'id': comment.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('comment_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
