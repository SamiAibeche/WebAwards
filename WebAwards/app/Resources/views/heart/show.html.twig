{% extends 'base.html.twig' %}

{% block body %}
    <h1>Heart</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ heart.id }}</td>
            </tr>
            <tr>
                <th>Islike</th>
                <td>{% if heart.isLike %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Idproject</th>
                <td>{{ heart.idProject }}</td>
            </tr>
            <tr>
                <th>Iduser</th>
                <td>{{ heart.idUser }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('heart_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('heart_edit', { 'id': heart.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
