{% extends 'base.html.twig' %}

{% block body %}
        <div class="container">

            <div class="row">
                <div  class="col-xs-12 text-center text-uppercase divTitle">
                    <h1> - Site du jour - </h1>
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row blocProjectDay">
                <div  class="col-xs-12 col-md-6">
                    <div class="col-xs-12">
                        <a href=" {{ winner[0].url }}" target="_blank">
                        <img class="img-responsive center imgProject" src="{{ asset('uploads/project/'~ winner[0].imgScreen) }}" alt="Image"/>
                        </a>
                    </div>
                    <div  class="col-xs-6 text-left"><a href=""><span class="glyphicon glyphicon-heart"></span></a>{{ winner[0].nbLike }}</div>
                    <div  class="col-xs-6 text-right">SOCIAL</div>
                </div>
                <div  class="col-xs-12 col-md-6">
                    <div class="col-xs-4">
                        <img class="img-responsive center imgProjectMobile" src="{{ asset('uploads/project/'~ winner[0].imgMobile) }}" alt="Image"/>
                    </div>
                    <div  class="col-xs-8 text-center blocInfoUser">
                        <div><h2><strong>{{ winner[0].name | upper }}</strong></h2></div>
                        <div><h5>De : {{ user[0].firstname }} {{ user[0].lastname }}</h5></div>
                        <div><h4>{{ winner[0].description }}</h4></div>
                        <div><h6>Posté le : {{ winner[0].dateAdd|date("d/m/Y") }}</h6></div>
                    </div>
                    <div  class="col-xs-12">
                        <div class="col-xs-6 col-md-2 borderVoteContainer design"><div></div><span>{{ vote[0].nbDesign }}</span></div>
                        <div class="col-xs-6 col-md-2 borderVoteContainer fluidity"><div></div><span>{{ vote[0].nbFluidity }}</span></div>
                        <div class="col-xs-6 col-md-2 borderVoteContainer concept"><div></div><span>{{ vote[0].nbConcept }}</span></div>
                        <div class="col-xs-6 col-md-2 borderVoteContainer content"><div></div><span>{{ vote[0].nbContent }}</span></div>
                        <div class="col-xs-6 col-md-4 borderVoteContainer nbTotal"><div></div><span>{{ vote[0].nbTotal }}</span></div>
                    </div>
                </div>
            </div>
        </div>

    <div class="container-fluid">
        <div class="container">
            <div class="row">
                <div  class="col-xs-12 text-center text-uppercase divTitle">
                    <h1> - les projets récents - </h1>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            {% for project in projects %}
                <div class="col-xs-12 col-md-4">
                    <a href="{{ path('project_show', { 'id': project.id }) }}">
                        <img class="imgProject" src="{{ asset('uploads/project/' ~ project.imgScreen) }}" />
                    </a>
                </div>
                <div class="col-xs-12 col-md-4">
                    <a href="{{ path('project_show', { 'id': project.id }) }}">
                        <img class="imgProject" src="{{ asset('uploads/project/' ~ project.imgScreen) }}" />
                    </a>
                </div>
                <div class="col-xs-12 col-md-4">
                    <a href="{{ path('project_show', { 'id': project.id }) }}">
                        <img class="imgProject" src="{{ asset('uploads/project/' ~ project.imgScreen) }}" />
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
